@model AChallenge.WebUI.Models.HomeViewModel
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">

    <title>Survey App</title>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/Home/Index/"><b>Challenge Survey App </b></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/Home/Index/">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/Home/Index/">About <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/Home/Index/">How To Use <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/Home/Index/">Contact <span class="sr-only">(current)</span></a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>

    <div class="container text-center">
        <br /><br /><br />
        @if (TempData["MsgError"] != null)
        {
            <div class="alert alert-danger">@TempData["MsgError"]</div>
        }
        @if (TempData["MsgSuccess"] != null)
        {
            <div class="alert alert-success">@TempData["MsgSuccess"]</div>
        }
        <div class="card">
            <div class="card-body">
                <h3>Login Account</h3>
                <hr />
                <div class="row">
                    <div class="col-md-6 text-right form-check">
                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
                        <label class="form-check-label" for="exampleRadios1">
                            Login as survey coordinator
                        </label>
                    </div>
                    <div class="col-md-6 text-left form-check">
                        <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
                        <label class="form-check-label" for="exampleRadios2">
                            Login as survey respondent
                        </label>
                    </div>
                </div>
                <br /><br />
                <div id="area1">
                    <form method="post" asp-controller="Home" asp-action="LoginCoordinator">
                        <div class="form-group col-md-6 offset-md-3">
                            <input asp-for="Coordinator.Username" type="text" class="form-control" placeholder="Please, entry username..." required />
                        </div>
                        <div class="form-group col-md-6 offset-md-3">
                            <input asp-for="Coordinator.Password" type="password" class="form-control" placeholder="Please, entry password..." required />
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-info">Login</button>
                        </div>
                    </form>
                </div>
                <div id="area2" style="display:none">
                    <form method="post" asp-controller="Home" asp-action="LoginRespondent">
                        <div class="form-group col-md-6 offset-md-3">
                            <input asp-for="Respondent.Username" type="text" class="form-control" placeholder="Please, entry username..." required />
                        </div>
                        <div class="form-group col-md-6 offset-md-3">
                            <input asp-for="Respondent.Password" type="password" class="form-control" placeholder="Please, entry password..." required />
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-info">Login</button>
                        </div>
                    </form>
                </div>
                <br />
                <p>If you don't have a account, <a href="/Home/Create/">Create new account</a></p>
            </div>
        </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>

    <script>
        $(document).ready(function () {
            $("input[type='radio']").click(function () {
                var radioValue = $("input[name='exampleRadios']:checked").val();
                if (radioValue) {
                    if (radioValue == "option1") {
                        $('#area1').css('display', 'block');
                        $('#area2').css('display', 'none');
                    } else {
                        $('#area1').css('display', 'none');
                        $('#area2').css('display', 'block');
                    }
                }
            });
        });
    </script>

</body>
</html>

