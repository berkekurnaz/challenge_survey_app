@model AChallenge.Models.Concrete.Response
@{
    ViewData["Title"] = "ResponseDetail";
    Layout = "~/Views/Shared/_LayoutCoordinator.cshtml";
}

<div class="card">
    <div class="card-body text-center">
        <h4>Response Detail</h4>
        <hr />
        <h5>@ViewBag.FindSurveyTitle</h5>
    </div>
</div>
<br />
<div class="row">
    @{
        int qNumber = 1;
    }
    @foreach (var item in Model.Answers)
    {
    <div class="col-md-6">
        <div class="card" style="margin-bottom:25px">
            <div class="card-body">
                <h6><b>Question-@qNumber:</b> @ViewBag.FindSurvey[qNumber-1].Title</h6>
                <hr />
                <ul>
                    @foreach (var qOption in @ViewBag.FindSurvey[qNumber - 1].Options)
                    {
                        if (qOption == item)
                        {
                            <li><b>@qOption</b></li>
                        }
                        else
                        {
                            <li>@qOption</li>
                        }
                    }
                </ul>
                <hr />
            <p><b>Respondent Answer: </b> @item</p>
        </div>
    </div>
    </div>
        qNumber++;
    }
</div>


