@model IEnumerable<AChallenge.Models.Concrete.Survey>
@{
    ViewData["Title"] = "OpenSurveys";
    Layout = "~/Views/Shared/_LayoutCoordinator.cshtml";
}

<h2 class="text-center">Open Surveys</h2>
<p class="text-center">You can see all open surveys in our platform.</p>
<hr />

<div class="card">
    <div class="card-body">
        @if (TempData["MsgSuccess"] != null)
        {
            <div class="alert alert-success">@TempData["MsgSuccess"]</div>
        }
        @if (Model.Count() > 0)
        {
            <div class="table-responsive">
                <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                    <thead>
                        <tr role="row">
                            <th>Id</th>
                            <th>Created Date</th>
                            <th>Is Visible</th>
                            <th>Detail</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        @foreach (var item in Model)
                        {
                            var tm = "#ModalEdit" + item.Id;
                            var mid = "ModalEdit" + item.Id;

                            <tr role="row" class="odd">
                                <td>@item.Id</td>
                                <td>@item.CreatedDate</td>
                                <td>@item.IsVisible</td>
                                <td>
                                    <a href="/Coordinator/OpenSurvey/@item.Id" class="btn btn-success btn-sm">Show Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <h4 class="text-center">You didn't add a survey yet</h4>
        }
    </div>
</div>

<script src="~/vendor/jquery/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('#dataTable').DataTable();
    });
</script>
