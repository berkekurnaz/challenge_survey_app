@model IEnumerable<AChallenge.Models.Concrete.Survey>
@{
    ViewData["Title"] = "OpenSurveys";
    Layout = "~/Views/Shared/_LayoutRespondent.cshtml";
}

<div class="card">
    @if(TempData["MsgSuccess"] != null)
    {
        <div class="alert alert-success">@TempData["MsgSuccess"]</div>
    }
    <div class="card-body">
        <h3 class="text-center">Open Surveys <span class="badge badge-pill badge-warning">@Model.Count()</span></h3>
        <hr />
        <ul class="list-group">
            <li class="list-group-item active">Surveys List - You can see all open surveys in this list.</li>
            @foreach (var item in Model)
            {
                <li class="list-group-item"><a href="/Respondent/Survey/@item.Id">@item.Title</a></li>
            }
        </ul>
    </div>
</div>

